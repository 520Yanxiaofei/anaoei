.music{width: 50px;height: 1px;position: absolute;top:100px;right:50px;}
.music .line{width: 4px;height: 5px;position: absolute;bottom:0;background-color: #f7b041;}
.music .line:nth-of-type(1){left:0;}
.music .line:nth-of-type(2){left:8px;}
.music .line:nth-of-type(3){left:16px;}
.music .line:nth-of-type(4){left:24px;}
.music .line:nth-of-type(5){left:32px;}
.music .line:nth-of-type(6){left:40px;}
.music.active .line:nth-of-type(1){-webkit-animation:wave 0.66s linear infinite;animation:wave 0.66s linear infinite;}
.music.active .line:nth-of-type(2){-webkit-animation:wave 0.8s linear infinite;animation:wave 0.8s linear infinite;}
.music.active .line:nth-of-type(3){-webkit-animation:wave 0.7s linear infinite;animation:wave 0.7s linear infinite;}
.music.active .line:nth-of-type(4){-webkit-animation:wave 0.5s linear infinite;animation:wave 0.5s linear infinite;}
.music.active .line:nth-of-type(5){-webkit-animation:wave 0.9s linear infinite;animation:wave 0.9s linear infinite;}
.music.active .line:nth-of-type(6){-webkit-animation:wave 1.2s linear infinite;animation:wave 1.2s linear infinite;}
@-webkit-keyframes wave{
	0%{height:8px}
	50%{height: 32px}
	100%{height: 12px}
}
@keyframes wave{
	0%{height:8px}
	50%{height: 32px}
	100%{height: 12px}
}
